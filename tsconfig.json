{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "incremental": true,
    "types": ["node", "express"]
  },
  "include": [
    "./src/**/*",
    "./custom.d.ts",
    "./server.ts"
  ]
}
